{% extends 'layout.html.twig' %}

{% block head %}
    <title>Médias</title>
    <meta name="description" content="Photos, vidéos venez découvrir la vie au PUF" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="keywords" content="Informatique Ho Chi Minh, Puf, Puf Ho Chi Minh ville, Puf Hcm, Puf video,
          Puf images, Puf médias"/>
    <meta name="viewport" content="width=device-width,initial-scale=1" /> 
    <link rel="icon" type="image/png" href="../Ressources/Img/favicon.png" />
    <link rel="icon" type="image/png" href="{{ app.request.basePath }}/Ressources/Img/favicon.png" />
    <link rel="shortcut icon" type="image/x-icon" href="{{ app.request.basePath }}/Ressources/Img/favicon.ico" />
    <link href="{{ app.request.basePath }}/Styles/style.css" rel="stylesheet" type="text/css"/>
    <script type="text/javascript" src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script type="text/javascript" src="{{ app.request.basePath }}/Js/jquery.autocomplete.js"></script>
    <script src="{{ app.request.basePath }}/Js/owl.carousel.js"></script>
    <script>
        $(document).ready(function () {
            $("#btn-connexion").click(function () {
                $(".contains.connexion").slideToggle(0);
            });

            $('#searchbar').autocomplete({
                 serviceUrl: '{{ path('search') }}',
                 dataType: 'json'
             });

            $('#btn-search').click(function(){
                var temp = $('#searchbar').val();
                if (temp != ''){
                     var arr = temp.split('-');
                    $.trim(arr[0]);
                    var route = "{{ path('searchID', { 'lib': "PLACEHOLDER" }) }}";
                    window.location = route.replace("PLACEHOLDER",arr[0]);
                }
            });
        });
    </script>
{% endblock %}
{% block medias %}
    <div id="filAriane">
        <h4><a href="{{ path('home') }}">Accueil</a> > Médias</h4>
    </div>
    <div id="mediasContainer"> 
        <h1>MEDIAS PUF</h1>
        <div id="mediasCat">
            <div id="mediasPhotos">
                <h2>Photos</h2>
                <div class="ligne"></div>
                <div id="mediasCarousel" class="owl-carousel">
                    <div class="item"><img src="{{ app.request.basePath }}/Ressources/Img/Medias/Carousel/imgBatiment.png" alt="Batiment"></div>
                    <div class="item"><img src="{{ app.request.basePath }}/Ressources/Img/Medias/Carousel/imgSalle.png" alt="Salle"></div>
                    <div class="item"><img src="{{ app.request.basePath }}/Ressources/Img/Medias/Carousel/imgPromo.png" alt="Promo"></div>
                    <div class="item"><img src="{{ app.request.basePath }}/Ressources/Img/Medias/Carousel/imgPromo2.png" alt="Promo 2"></div> 
                </div>
            </div>
            <div id="mediasVideos">
                <h2>Vidéos</h2>
                <div class="ligne"></div>
                <iframe src="https://www.youtube.com/embed/SGmfsYikZFA?rel=0" allowfullscreen></iframe><br/>
                <a href="https://www.youtube.com/channel/UCZMr8c8RGZxnvRSigkRFAlw">-> Plus de vidéos</a>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $("#mediasCarousel").owlCarousel({
                navigation: true,
                slideSpeed: 300,
                paginationSpeed: 400,
                singleItem: true
            });
        });
    </script>
{% endblock %}
