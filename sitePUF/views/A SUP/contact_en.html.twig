{% block contact %}
		<div id="filAriane">
			<h4><a href="{{ path('home_en') }}">Home</a> > Contact</h4>
		</div>
		<div id="contactContainer">
			<h1>Contact us</h1>
			<div id="contactInfos">
				<div id="googleMap"></div>
				<div id="contactCoordonnees">
					<p>	Pôle Universitaire Français de Hô Chi Minh Ville</p>
					<p>	Office 706, 7th Floor, Nationnal University <br/>
						Area 6, Linh Trung Ward, District 8, <br/>
						Hô Chi Minh Vietnam</p>
					<p>	Phone: (08) 37 242 169 <br/>
						Fax : (08) 37 242 166</p>
				</div>
				<div id="contactForm">
                <form method="post" action="{{ app.request.basePath }}/Includes/email.php">
						<label>Your name/company : <span class="obligatoire">*</span></label>
						<input type="text" name="nom" id="contactNom" required/><br/>
						
						<label>Your email : <span class="obligatoire">*</span></label>
						<input type="email" name="mail" id="contactMail" placeholder="exemple@exemple.com" required/><br/>
						
						<label>Subject: </label>
						<input type="text" name="nom" id="contactDemande"/><br/><br/>

						<label>Your message : <span class="obligatoire">*</span></label><br/>
						<textarea name="message" id="contactMessage" rows="20" cols="100" placeholder="2000 caractères maximum" maxlength="2000" required></textarea>

						<input type="submit" value="Submit" id="contactBtnSubmit"/>
					</form>
				</div>
			</div>
		</div>
		<script src="https://maps.googleapis.com/maps/api/js?v=3.exp?sensor=false"></script>
    <script>
        function initialize() {
            var latLng = new google.maps.LatLng(21.0367171, 105.78203200000007);
            var mapOptions = {zoom: 15, center: latLng};
            var map = new google.maps.Map(document.getElementById("googleMap"), mapOptions);
            var marker = new google.maps.Marker({position: latLng, map: map, title: "Trung tâm Đại học Pháp - PUF"});
        }
        ;
        google.maps.event.addDomListener(window, 'load', initialize);
    </script>
